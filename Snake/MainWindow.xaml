<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="410"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Name="GameScene" Grid.Row="0" HorizontalAlignment="Stretch" Width="780" Height="410" Grid.ColumnSpan="3" Margin="6,4,6,5"/>
        <Label Name="LabelMovesLeft" Grid.Row="1" Grid.Column="0" Foreground="White" Content="Moves left: " HorizontalAlignment="Center"/>
        <Label Name="LabelScore" Grid.Row="1" Grid.Column="1" Foreground="White" Content="Score: " HorizontalAlignment="Center"/>
        <Label Name="LabelGeneration" Grid.Row="1" Grid.Column="2" Foreground="White" Content="Generation: " HorizontalAlignment="Center"/>
    </Grid>
</Window>
